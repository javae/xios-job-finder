<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xios.be.jobfinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <permission
        android:name="xios.be.jobfinder.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="xios.be.jobfinder.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="xios.be.jobfinder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="xios.be.jobfinder.SearchParams"
            android:label="@string/title_activity_search_params" >
        </activity>
        <activity
            android:name="xios.be.jobfinder.SearchBuilderActivity"
            android:label="@string/title_activity_search_params" >
        </activity>
        <activity
            android:name="xios.be.jobfinder.SavedSearchActivity"
            android:label="@string/title_activity_saved_search"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="xios.be.jobfinder.FavoritesActivity"
            android:label="@string/title_activity_favorites"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="xios.be.jobfinder.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="xios.be.jobfinder.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBytipj_EiKWUOn67_l0U8l3I8KqAopk9k" />

        <activity
            android:name="be.xios.jobfinder.JobSearchActivity"
            android:label="@string/title_activity_job_search" >
